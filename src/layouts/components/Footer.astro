---
const today = new Date();
// import { Image } from "astro:assets";
// import LinkedInBlack from "@src/assets/img/linkedin-mark.svg";
// import LinkedInWhite from "@src/assets/img/linkedin-mark-white.svg";
---

<footer
  class="bg-white dark:bg-zinc-900 border-t border-zinc-200 dark:border-zinc-800"
>
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/blog"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >Blog</a
            >
          </li>
          <li>
            <a
              href="/projects"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >Projects</a
            >
          </li>
          <li>
            <a
              href="/about"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >About</a
            >
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-4">Connect</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="https://github.com/terieyenike"
              target="_blank"
              rel="noopener noreferrer"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >GitHub</a
            >
          </li>
          <li>
            <a
              href="https://linkedin.com/in/terieyenike"
              target="_blank"
              rel="noopener noreferrer"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >LinkedIn</a
            >
          </li>
          <li>
            <a
              href="https://instagram.com/terieyenike"
              target="_blank"
              rel="noopener noreferrer"
              class="text-zinc-800 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300"
              >Instagram</a
            >
          </li>
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-4">Support</h3>
        <div class="space-y-4">
          <a
            href="https://www.buymeacoffee.com/eyenike"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block"
          >
            <img
              src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png"
              alt="Buy Me A Coffee"
              class="h-10 w-auto hover:opacity-90 transition-opacity duration-300"
            />
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 border-t border-zinc-200 dark:border-zinc-800">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-zinc-500 dark:text-zinc-400"
      >
        <div>© {today.getFullYear()} Teri. All rights reserved.</div>
        <div class="flex items-center gap-2">
          <span>Built with</span>
          <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#005353] dark:text-[#00E0E0] hover:underline"
          >
            Astro•
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
