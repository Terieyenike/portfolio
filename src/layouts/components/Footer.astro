---
const today = new Date();
import LogoBlack from "@src/assets/img/logo.svg";
import LogoWhite from "@src/assets/img/logo-inverted.svg";
import { Image } from "astro:assets";
---

<footer class="bg-white dark:bg-zinc-900 border-t border-zinc-200 dark:border-zinc-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 mb-8">
      <!-- Brand Section -->
      <div class="space-y-3 flex items-center">
        <div class="relative w-10 h-10 mr-4">
          <Image
            src={LogoBlack}
            alt="Teri Eyenike Logo"
            class="absolute inset-0 w-10 h-10 transition-opacity duration-300 dark:opacity-0"
            loading="lazy"
          />
          <Image
            src={LogoWhite}
            alt="Teri Eyenike Logo"
            class="absolute inset-0 w-10 h-10 transition-opacity duration-300 opacity-0 dark:opacity-100"
            loading="lazy"
          />
        </div>
        <div>
          <h2 class="text-base sm:text-lg lg:text-xl font-semibold text-zinc-900 dark:text-white">
            Teri Eyenike
          </h2>
          <p class="text-sm sm:text-base text-zinc-600 dark:text-zinc-400 font-normal">
            Full time developer making a difference
          </p>
        </div>
      </div>

      <!-- Quick Links and Connect Combined -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 lg:gap-12">
        <!-- Quick Links -->
        <div>
          <h3 class="text-sm sm:text-base lg:text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-6">Quick Links</h3>
          <ul class="space-y-3">
            <li>
              <a
                href="/"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center group"
              >
                <span class="w-1 h-1 bg-[#005353] dark:bg-[#00E0E0] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                Home
              </a>
            </li>
            <li>
              <a
                href="/blog"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center group"
              >
                <span class="w-1 h-1 bg-[#005353] dark:bg-[#00E0E0] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                Blog
              </a>
            </li>
            <li>
              <a
                href="/projects"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center group"
              >
                <span class="w-1 h-1 bg-[#005353] dark:bg-[#00E0E0] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                Projects
              </a>
            </li>
            <li>
              <a
                href="/about"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center group"
              >
                <span class="w-1 h-1 bg-[#005353] dark:bg-[#00E0E0] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                About
              </a>
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center group"
              >
                <span class="w-1 h-1 bg-[#005353] dark:bg-[#00E0E0] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></span>
                Contact
              </a>
            </li>
          </ul>
        </div>

        <!-- Connect -->
        <div>
          <h3 class="text-sm sm:text-base lg:text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-6">Connect</h3>
          <ul class="space-y-3">
            <li>
              <a
                href="https://github.com/terieyenike"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center gap-2 group focus:outline-none focus:ring-2 focus:ring-[#00E0E0]"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
                </svg>
                GitHub
              </a>
            </li>
            <li>
              <a
                href="https://linkedin.com/in/terieyenike"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center gap-2 group focus:outline-none focus:ring-2 focus:ring-[#00E0E0]"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"></path>
                </svg>
                LinkedIn
              </a>
            </li>
            <li>
              <a
                href="https://instagram.com/terieyenike"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
                class="text-sm sm:text-base text-zinc-700 dark:text-zinc-300 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors duration-300 flex items-center gap-2 group focus:outline-none focus:ring-2 focus:ring-[#00E0E0]"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.25.75a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
                Instagram
              </a>
            </li>
          </ul>
        </div>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-sm sm:text-base lg:text-lg font-semibold text-[#005353] dark:text-[#00E0E0] mb-6">Support My Work</h3>
        <div class="space-y-4">
          <a
            href="https://www.buymeacoffee.com/eyenike"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block transform hover:scale-105 transition-transform duration-300 focus:outline-none focus:ring-2 focus:ring-[#00E0E0]"
          >
            <img
              src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png"
              alt="Buy Me A Coffee"
              class="h-10 sm:h-12 lg:h-14 w-auto shadow-md dark:shadow-[#00E0E0]/20 rounded"
              loading="lazy"
            />
          </a>
          <p class="text-xs text-zinc-500 dark:text-zinc-400">Your support helps me create more content!</p>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 border-t border-zinc-200 dark:border-zinc-800">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <div class="text-xs sm:text-sm text-zinc-500 dark:text-zinc-400">
          Â© {today.getFullYear()} Teri Eyenike. All rights reserved.
        </div>
        <div class="flex items-center gap-2 text-xs sm:text-sm text-zinc-500 dark:text-zinc-400">
          <span>Built with</span>
          <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#005353] dark:text-[#00E0E0] hover:underline font-medium"
          >
            Astro
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
