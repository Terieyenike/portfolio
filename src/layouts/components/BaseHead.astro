---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../../styles/global.css";
import Favicon from "@src/assets/img/favicon.png";

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
}

const { title = "Creative Technologist and Educator | Building future tools", description = "Combining software engineering and education to build interactive tools, creative experiences, and engaging ways to learn through tech", image = "/src/assets/img/profile.png", canonicalUrl } = Astro.props;

// Use the provided canonical URL or generate one from the current path
const finalCanonicalURL = canonicalUrl ? new URL(canonicalUrl) : new URL(Astro.url.pathname, Astro.site);

// Generate structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Teri Eyenike",
  url: Astro.site,
  image: new URL(image, Astro.url),
  description: description,
  sameAs: [
    "https://github.com/terieyenike",
    "https://linkedin.com/in/terieyenike",
    "https://x.com/terieyenike",
    "https://www.instagram.com/terieyenike",
    "https://www.youtube.com/@terieyenike"
  ],
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href={Favicon.src} />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={finalCanonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content="Teri Eyenike" />
<meta
  name="keywords"
  content="cloud engineer, creative technologist, developer tools, AWS, DevOps, JavaScript, Node.js, Python, product builder, software engineer, technical content creator, indie hacker, AI productivity tools, open source projects, developer experience, software builder"
/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={finalCanonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />
<meta
  property="og:site_name"
  content="The technical storyteller - Teri Eyenike"
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={finalCanonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
<meta name="twitter:creator" content="@terieyenike" />

<!-- Additional Meta Tags -->
<meta name="theme-color" content="#ffffff" />
<meta name="robots" content="index, follow" />
<meta name="language" content="English" />
<meta name="revisit-after" content="7 days" />

<!-- Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
