---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import { SITE_TITLE } from "../consts";
---

<BaseLayout
  title={`Contact - ${SITE_TITLE}`}
  description="Get in touch with me for collaborations, questions, or just to say hi!"
>
  <main class="min-h-screen bg-gradient-to-b from-white to-zinc-50 dark:from-zinc-900 dark:to-zinc-950">
    <!-- Hero Section -->
    <section class="relative overflow-hidden py-20">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-[#005353]/10 via-transparent to-transparent dark:from-[#00E0E0]/10"></div>
      <div class="container mx-auto px-4 relative">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-[#005353] to-[#00E0E0] bg-clip-text text-transparent">
            Let's Build Something Amazing
          </h1>
          <p class="text-xl text-zinc-600 dark:text-zinc-300 mb-8">
            Whether you have a project in mind or just want to connect, I'm here to help bring your ideas to life.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#contact-form" class="px-8 py-3 bg-[#005353] dark:bg-[#00E0E0] text-white dark:text-zinc-900 rounded-lg font-medium hover:bg-[#003939] dark:hover:bg-[#00D0D0] transition-all duration-300 transform hover:scale-105">
              Send a Message
            </a>
            <a href="mailto:developedbyteri@gmail.com" class="px-8 py-3 border-2 border-[#005353] dark:border-[#00E0E0] text-[#005353] dark:text-[#00E0E0] rounded-lg font-medium hover:bg-[#005353]/10 dark:hover:bg-[#00E0E0]/10 transition-all duration-300">
              Email Directly
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information Cards -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-16">
          <div class="bg-white dark:bg-zinc-800 rounded-2xl p-6 shadow-lg border border-zinc-200 dark:border-zinc-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-[#005353]/10 dark:bg-[#00E0E0]/10 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#005353] dark:text-[#00E0E0]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-zinc-900 dark:text-zinc-100">Email</h3>
            <p class="text-zinc-600 dark:text-zinc-400">Get in touch directly</p>
            <div class="flex items-center gap-2 mt-2">
              <a href="mailto:developedbyteri@gmail.com" class="text-[#005353] dark:text-[#00E0E0] hover:underline">developedbyteri@gmail.com</a>
              <button 
                onclick="navigator.clipboard.writeText('developedbyteri@gmail.com')"
                class="p-1 hover:bg-zinc-100 dark:hover:bg-zinc-700 rounded transition-colors"
                title="Copy email address"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-zinc-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                </svg>
              </button>
            </div>
          </div>

          <div class="bg-white dark:bg-zinc-800 rounded-2xl p-6 shadow-lg border border-zinc-200 dark:border-zinc-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-[#005353]/10 dark:bg-[#00E0E0]/10 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#005353] dark:text-[#00E0E0]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-zinc-900 dark:text-zinc-100">Location</h3>
            <p class="text-zinc-600 dark:text-zinc-400">Based in</p>
            <div class="mt-2">
              <p class="text-[#005353] dark:text-[#00E0E0]">Nigeria</p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1">West African Time (WAT)</p>
            </div>
          </div>

          <div class="bg-white dark:bg-zinc-800 rounded-2xl p-6 shadow-lg border border-zinc-200 dark:border-zinc-700 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-[#005353]/10 dark:bg-[#00E0E0]/10 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-[#005353] dark:text-[#00E0E0]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2 text-zinc-900 dark:text-zinc-100">Response Time</h3>
            <p class="text-zinc-600 dark:text-zinc-400">Usually within</p>
            <p class="text-[#005353] dark:text-[#00E0E0] mt-2">24-48 hours</p>
            <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1">Available Monday - Friday</p>
          </div>
        </div>

        <!-- Contact Form Section -->
        <div id="contact-form" class="max-w-4xl mx-auto">
          <ContactForm />
        </div>

        <!-- Social Links -->
        <div class="max-w-2xl mx-auto mt-16 text-center">
          <h2 class="text-2xl font-semibold mb-4 text-zinc-900 dark:text-zinc-100">Let's Connect</h2>
          <p class="text-zinc-600 dark:text-zinc-400 mb-8">Follow me on social media for updates and insights</p>
          <div class="flex justify-center gap-8">
            <a 
              href="https://www.github.com/terieyenike" 
              rel="noopener noreferrer" 
              target="_blank" 
              class="group flex flex-col items-center text-zinc-600 dark:text-zinc-400 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors"
            >
              <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm">GitHub</span>
            </a>
            <a 
              href="https://www.linkedin.com/in/terieyenike/" 
              rel="noopener noreferrer" 
              target="_blank" 
              class="group flex flex-col items-center text-zinc-600 dark:text-zinc-400 hover:text-[#005353] dark:hover:text-[#00E0E0] transition-colors"
            >
              <svg class="w-8 h-8 mb-2" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-sm">LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<script>
  // Add copy email functionality
  document.querySelectorAll('button[onclick]').forEach(button => {
    button.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText('developedbyteri@gmail.com');
        const originalTitle = button.getAttribute('title') || 'Copy email address';
        button.setAttribute('title', 'Copied!');
        setTimeout(() => {
          button.setAttribute('title', originalTitle);
        }, 2000);
      } catch (err) {
        console.error('Failed to copy text: ', err);
      }
    });
  });
</script>
