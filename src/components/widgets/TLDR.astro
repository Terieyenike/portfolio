---
interface Props {
  summary?: string;
}

const { summary } = Astro.props;
---

{
  summary && (
    <div class="my-6 p-4 bg-zinc-100 dark:bg-zinc-800 rounded-xl border border-zinc-200 dark:border-zinc-700">
      <div class="flex items-center gap-2 mb-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-[#00a7a7]"
        >
          <circle cx="12" cy="12" r="10" />
          <path d="M12 16v-4" />
          <path d="M12 8h.01" />
        </svg>
        <h3 class="text-lg font-bold m-0">TL;DR</h3>
      </div>
      <p class="m-0 text-zinc-700 dark:text-zinc-300">{summary}</p>
    </div>
  )
} 
